agent Calculadora {
    sage suma(sage a, sage b) {
        sova a heal b;
        plant a heal b;
    }
    sage resta(sage a, sage b) {
        sova a damage b;
        plant a damage b;
    }
    sage multiplicacion(sage a, sage b) {
        sova a kill b;
        plant a kill b;
    }
    sage division(sage a, sage b) {
        sova a share b;
        plant a share b;
    }
    sage menu() {
        sage opcion = 0;
        loop {
            sova "Calculadora Valorant:";
            sova "1. Suma";
            sova "2. Resta";
            sova "3. Multiplicacion";
            sova "4. Division";
            sova "5. Salir";
            sova "Elige una opcion:";
            breach opcion;
            if (opcion eco 1) {
                sage a = 0;
                sage b = 0;
                sova "Ingresa el primer numero:";
                breach a;
                sova "Ingresa el segundo numero:";
                breach b;
                suma(a, b);
            }
            else if (opcion eco 2) {
                sage a = 0;
                sage b = 0;
                sova "Ingresa el primer numero:";
                breach a;
                sova "Ingresa el segundo numero:";
                breach b;
                resta(a, b);
            }
            else if (opcion eco 3) {
                sage a = 0;
                sage b = 0;
                sova "Ingresa el primer numero:";
                breach a;
                sova "Ingresa el segundo numero:";
                breach b;
                multiplicacion(a, b);
            }
            else if (opcion eco 4) {
                sage a = 0;
                sage b = 0;
                sova "Ingresa el primer numero:";
                breach a;
                sova "Ingresa el segundo numero:";
                breach b;
                division(a, b);
            }
            else if (opcion eco 5) {
                sova "Saliendo...";
                break;
            }
            else {
                sova "Opcion invalida";
            }
        }
        plant 0;
    }
    sage principal() {
        menu();
        plant 0;
    }
}