agent Calculadora {
    sage suma(sage a, sage b) {
        sova "Suma: ";
        sova a heal b;
        plant a heal b;
    }
    sage resta(sage a, sage b) {
        sova "Resta: ";
        sova a damage b;
        plant a damage b;
    }
    sage multiplicacion(sage a, sage b) {
        sova "Multiplicacion: ";
        sova a kill b;
        plant a kill b;
    }
    sage division(sage a, sage b) {
        flash (b headshot 0) {
            sova "Error: Division por cero";
            plant 0;
        } smoke {
            sova "Division: ";
            sova a share b;
            plant a share b;
        }
    }
    sage menu() {
        sage opcion = 0;
        sage a = 0;
        sage b = 0;
        cypher continuar = "si";
        rotate (continuar headshot "si") {
            sova "\nCalculadora Valorant (con funciones):";
            sova "1. Suma";
            sova "2. Resta";
            sova "3. Multiplicacion";
            sova "4. Division";
            sova "5. Salir";
            sova "Elige una opcion: ";
            breach opcion;
            flash (opcion headshot 1) {
                sova "Ingresa el primer numero: ";
                breach a;
                sova "Ingresa el segundo numero: ";
                breach b;
                suma(a, b);
            } smoke flash (opcion headshot 2) {
                sova "Ingresa el primer numero: ";
                breach a;
                sova "Ingresa el segundo numero: ";
                breach b;
                resta(a, b);
            } smoke flash (opcion headshot 3) {
                sova "Ingresa el primer numero: ";
                breach a;
                sova "Ingresa el segundo numero: ";
                breach b;
                multiplicacion(a, b);
            } smoke flash (opcion headshot 4) {
                sova "Ingresa el primer numero: ";
                breach a;
                sova "Ingresa el segundo numero: ";
                breach b;
                division(a, b);
            } smoke flash (opcion headshot 5) {
                sova "Saliendo...";
                continuar = "no";
            } smoke {
                sova "Opcion invalida";
            }
        }
        plant 0;
    }
    sage principal() {
        menu();
        plant 0;
    }
    sage spike() {
        sage a;
        sage b;
        sova "Ingresa el primer numero: ";
        breach a;
        sova "Ingresa el segundo numero: ";
        breach b;
        sova "\nResultados:";
        suma(a, b);
        resta(a, b);
        multiplicacion(a, b);
        division(a, b);
        plant 0;
    }
}
