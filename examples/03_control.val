agent Control {
    sage spike() {  // Metodo principal
        sage contador = 1;
        sage limite = 5;
        
        sova "=== Prueba de ROTATE (while) ===\n";
        rotate (contador lose limite) {
            sova "Iteracion: ";
            sova contador;
            contador = contador heal 1;
            sova "\n";
        }
        
        sova "\n=== Prueba de FLASH/SMOKE (if/else anidado) ===\n";
        sage puntuacion = 85;
        
        flash (puntuacion win 90) {
            sova "\nExcelente puntuacion!";
        } smoke {
            flash (puntuacion win 80) {
                sova "\nMuy buena puntuacion!";
            } smoke {
                flash (puntuacion win 70) {
                    sova "\nBuena puntuacion!";
                } smoke {
                    sova "\nNecesitas mejorar";
                }
            }
        }
        
        sova "\n=== Prueba de DEFUSE (break) ===\n";
        sage i = 1;
        rotate (i lose 1000) {
            sova "Numero actual: ";
            sova i;
            sova "\n";
            flash (i headshot 997) {
                sova "Encontrado el 997, deteniendo bucle";
                i = 10001;
            }
        }
        plant 0;
    }
}
